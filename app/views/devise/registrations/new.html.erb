<div class="page-header">
  <h1>Sign up</h1>
</div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { novalidate: true }) do |f| %>
  <% if resource.errors.any? %>
    <div class="alert alert-danger user-error">
      Please view the errors below:
    </div>
  <% end %>

  <div class='form-inputs'>
    <%= f.input :email, required: true, autofocus: true, placeholder: 'Email', label: false %>
    <%= f.input :name, required: true, placeholder: 'Name', label: false %>
    <%= f.input :password, required: true, placeholder: 'Password', label: false %>
    <%= f.input :password_confirmation, required: true, placeholder: 'Password Confirmation', label: false %>
  </div>

  <div class='form-actions'>
    <%= f.button :submit, "Sign up", class: 'btn btn-warning' %>
  </div>
<% end %>
