<!DOCTYPE html>
<html>
<head>
  <title>CrowdFunding</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>

<div id="cover">
  <div id="title">
    <h1>CROWD FUNDING</h1>
  </div>
  <div id="cover-explore-btn" class="row">
    <%= button_to "Explore", 
        explore_path, 
        method: :get,
        class: "btn btn-warning btn-lg" %>
  </div>
</div>

<div class="row">
  <div class="col-sm-4 col-md-4">
    <div class="thumbnail">
      <%= link_to image_tag("470223858.jpg") %>
      <div class="caption">
        <h3>Donald Trump Election 2016</h3>
        <p>The U.S presidency 2016</p>
        <p>
          <%= link_to 'Contribute', project_path(14), class: "btn btn-primary" %>
          <%= link_to 'View', project_path(14), class: "btn btn-default" %>
        </p>
      </div>
    </div>
  </div>


  <div class="col-sm-4 col-md-4">
    <div class="thumbnail">
      <%= link_to image_tag("water.jpg") %>
      <div class="caption">
        <h3>Middle East Water Supply</h3>
        <p>afghanistan</p>
        <p>
          <%= link_to 'Contribute', project_path(10), class: "btn btn-primary" %>
          <%= link_to 'View', project_path(10), class: "btn btn-default" %>
        </p>
      </div>
    </div>
  </div>

  <div class="col-sm-4 col-md-4">
    <div class="thumbnail">
      <%= link_to image_tag("tibet.jpg") %>
      <div class="caption">
        <h3>China Western Voluntary Teacher</h3>
        <p>Tibet</p>
        <p>
          <%= link_to 'Contribute', project_path(12), class: "btn btn-primary" %>
          <%= link_to 'View', project_path(12), class: "btn btn-default" %>
        </p>
      </div>
    </div>
  </div>
</div>

</body>
</html>

