<% if @project.owner == current_user %>
  <%= button_to 'EDIT', edit_project_path(@project.id), method: :get, class: "btn btn-primary btn-lg" %>
  <%= button_to 'DELETE', project_path(@project.id), method: :delete, class: "btn btn-danger btn-lg"  %>
<% end %>

<div class="list-group" style="width:50%; margin:0 auto;">
  <div href="#" class="list-group-item active">
    <p class="list-group-item-heading">Project</p>
    <h4 class="list-group-item-text"><%= @project.name %></h4>
  </div>

  <div href="#" class="list-group-item">
    <p class="list-group-item-heading">Owner</p>
    <h4 class="list-group-item-text"><%= @project.owner.name %></h4>
  </div>

  <div href="#" class="list-group-item">
    <p class="list-group-item-heading">Target Amount</p>
    <h4 class="list-group-item-text"><span>$</span><%= @project.target_amount %></h4>
  </div>

  <div href="#" class="list-group-item">
    <p class="list-group-item-heading">Description</p>
    <h4 class="list-group-item-text"><%= @project.description %></h4>
  </div>

  <div class="list-group-item">
    <p class="list-group-item-heading">Deadline</p>
    <h4 class="list-group-item-text"><%= display_time(@project.deadline) %></h4>
  </div>
</div>

<h4>Current Amount: <%= @project.current_amount %></h4>

<div>
  <h4>Fundings</h4>
  <% if @project.fundings.any? %>
    <% @project.fundings.each do |funding| %>
      <div>
        <%= link_to funding.user.name, user_profile_path(funding.user) %>
        <%= funding.amount %>
      </div>
    <% end %>
  <% else %>
    <div>No fundings now</div>
  <% end %>
</div>

<%= simple_form_for @funding, url: project_funding_path do |f| %>
  <%= f.error_notification %>

  <%= f.input :amount, placeholder: 'Amount', label: false, as: :string %>

  <%= f.button :submit, "Fund", class: 'btn btn-primary' %>
<% end %>