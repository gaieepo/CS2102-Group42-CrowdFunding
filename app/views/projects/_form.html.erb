<%= simple_form_for @project, 
    defaults: {required: false} do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :deadline %>
  <%= f.input :target_amount, as: :string %>
  <%= f.input :description, as: :text %>

  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
